    x:Class="Evidences.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Color palette -->
            <Color x:Key="black">#FF1C1C1C</Color>
            <Color x:Key="pumpkinOrange">#FFFF7B02</Color>
